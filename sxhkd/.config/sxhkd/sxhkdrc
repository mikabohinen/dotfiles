# Rofi keybindings
super + ctrl + {d,r,p,s}
    sh $HOME/.config/rofi/bin/{launcher,runner,powermenu,screenshot}

# Open the master.tex file of the current course in NeoVim
super + ctrl + m
    urxvt -e nvim ~/workspace/master/current_course/master.tex

# Open the compiled notes of the current course
super + ctrl + o
    zathura ~/workspace/master/current_course/master.pdf

# Open the course directory of the current course in lf (file manager)
super + alt + r
    urxvt -e lf ~/workspace/master/current_course

# Open the course directory of the current course in a terminal (urxvt)
super + ctrl + j
    urxvt -e cd ~/university/current_course

# Update master.tex to include all lectures and recompile using latexrun
#super + v
#    ~/workspace/master/scripts/compile-all-masters.py && \
#    cd ~/workspace/master/current_course && \
#    latexrun master.tex

# List all lectures for the current course
super + ctrl + l
    ~/workspace/master/scripts/rofi-lectures.py

# Select a course using Rofi
super + alt + s
    ~/workspace/master/scripts/select-course.sh

